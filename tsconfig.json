{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "node",
        "importHelpers": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": "./",
        "outDir": "./dist",
        "strict": true,
        "paths": {
            "@/*": ["src/*"]
        },
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "incremental": true
    },
    "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
